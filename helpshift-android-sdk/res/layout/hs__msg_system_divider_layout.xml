<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/hs__chatBubbleMargin"
    android:layout_marginLeft="@dimen/hs__chatBubbleMargin"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="@dimen/hs__chatBubbleMargin"
    android:layout_marginRight="@dimen/hs__chatBubbleMargin"
    android:layout_marginBottom="18dp"
    android:orientation="vertical">

    <com.helpshift.views.HSTextView
        android:id="@+id/conversation_closed_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:paddingBottom="18dp"
        android:text="@string/hs__conversation_rejected_status"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/hs__textSizeExtraSmall"
        android:visibility="gone" />

    <View
        android:id="@+id/conversations_divider"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="?attr/hs__separatorColor" />

</LinearLayout>
