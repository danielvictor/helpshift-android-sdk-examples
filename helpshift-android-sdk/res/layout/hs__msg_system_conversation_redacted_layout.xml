<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/hs__chatBubbleMargin"
    android:layout_marginLeft="@dimen/hs__chatBubbleMargin"
    android:layout_marginTop="18dp"
    android:layout_marginEnd="@dimen/hs__chatBubbleMargin"
    android:layout_marginRight="@dimen/hs__chatBubbleMargin"
    android:layout_marginBottom="18dp"
    android:orientation="vertical">

    <com.helpshift.views.HSTextView
        android:id="@+id/conversation_redacted_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/hs__textSizeExtraSmall"
        android:textStyle="italic" />

</LinearLayout>
